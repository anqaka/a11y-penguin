---
export interface Props {
    title: string,
    body: string,
    imgUrl: string,
    linkUrl: string
}
const {title, body, imgUrl, linkUrl} = Astro.props;
---
<div class="flex flex-col md:flex-row even:md:flex-row-reverse">
  <div class="p-6 bg-primary">
    <img src={imgUrl} alt="">
  </div>
  <div class="p-6">
    <h2 class="text-2xl font-bold text-secondary">
        {title}
    </h2>
    <p class="text-primary info text-justify">
        {body}
    </p>
    <a href={linkUrl} target="_blank">Checkout this link, I don't know what for but you can</a>
  </div>
</div>
<style>
  .info::first-letter {
    @apply text-3xl text-accent;
  }
</style>